# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/pandapaths
# For AWS RDS: postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/pandapaths

# Sanity CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token_with_read_write_permissions

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://pandapaths.com
# For development: http://localhost:3000

# Email Service (Optional - for future integration)
# SENDGRID_API_KEY=your_sendgrid_api_key
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY_ID=your_access_key
# AWS_SES_SECRET_ACCESS_KEY=your_secret_key

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
